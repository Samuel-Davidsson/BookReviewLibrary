@model SamsBookReviewLibary.Models.Reviews

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Reviews</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
