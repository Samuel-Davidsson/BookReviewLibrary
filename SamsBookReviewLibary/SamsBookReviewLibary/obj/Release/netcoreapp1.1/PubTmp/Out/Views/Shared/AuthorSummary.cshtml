@model Author

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail" id="test">
        <img src="@Model.ImgThumbNail" alt="">
        <div class="caption">
            <h3>@Model.FirstName @Model.LastName</h3>
            <p>@Model.Info</p>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.AuthorID">Edit</a> |
                <a asp-action="Details" asp-route-id="@Model.AuthorID">Details</a> |
                <a asp-action="Delete" asp-route-id="@Model.AuthorID">Delete</a>
            </div>

        </div>
    </div>
</div>
