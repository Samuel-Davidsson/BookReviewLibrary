@model IEnumerable<SamsBookReviewLibary.Models.AuthorBooks>

@{
    ViewData["Title"] = "Index";
}

<h2>Author with their written books</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author.FirstName)
                @Html.DisplayFor(modelItem => item.Author.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookTitle.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AuthorBooksID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AuthorBooksID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AuthorBooksID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
