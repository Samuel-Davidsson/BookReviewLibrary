@model SamsBookReviewLibary.Models.AuthorBooks

@{
    ViewData["Title"] = "Create";
}

<h2>Asign Authors to books</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="AuthorID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="AuthorID" class ="form-control" asp-items="ViewBag.AuthorID"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BookTitleID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="BookTitleID" class ="form-control" asp-items="ViewBag.BookTitleID"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                <a asp-action="Index" class="btn btn-default">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
